{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./src",

        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",

        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017"]
    },
    "include": ["src/server"]
}
