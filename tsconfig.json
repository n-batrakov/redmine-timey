{
    "compilerOptions": {
        "outDir": "dist/public",
        "rootDir": "src",

        "esModuleInterop": true,
        "target": "es2015",
        "module": "esnext",
        "moduleResolution": "node",

        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017", "dom"],
        
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["./src/server"]
}
