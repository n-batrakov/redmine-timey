{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",

        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2015",
        "moduleResolution": "node",

        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017", "dom"],
        
        "jsx": "react",

        "incremental": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
